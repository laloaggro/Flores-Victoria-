# ====================================
# FLORES VICTORIA - Variables de Entorno
# ====================================
# Copiar este archivo a .env y configurar los valores reales
# Ver ENV_VARIABLES.md para guía detallada

# ====================================
# CONFIGURACIÓN GENERAL
# ====================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ====================================
# BASE DE DATOS - PostgreSQL
# ====================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=flores_victoria_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ====================================
# BASE DE DATOS - MongoDB
# ====================================
MONGODB_URI=mongodb://localhost:27017/flores_victoria
MONGODB_DB_NAME=flores_victoria

# ====================================
# REDIS - Cache y Sesiones
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ====================================
# AUTENTICACIÓN JWT
# ====================================
# Generar con: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_REFRESH_EXPIRES_IN=30d

# ====================================
# SERVICIOS DE EMAIL
# ====================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password
EMAIL_FROM=noreply@flores-victoria.cl
EMAIL_FROM_NAME=Flores Victoria

# ====================================
# PASARELA DE PAGO - Transbank
# ====================================
TRANSBANK_API_KEY=597055555532
TRANSBANK_COMMERCE_CODE=597055555532
TRANSBANK_ENVIRONMENT=integration

# ====================================
# SERVICIOS DE IA
# ====================================
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
LEONARDO_API_KEY=your_leonardo_api_key_here
REPLICATE_API_TOKEN=your_replicate_api_token_here

# ====================================
# ALMACENAMIENTO
# ====================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ====================================
# MONITOREO
# ====================================
GRAFANA_API_KEY=your_grafana_api_key
GRAFANA_API_URL=https://your-instance.grafana.net
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SERVICE_NAME=flores-victoria

# ====================================
# CI/CD
# ====================================
CODECOV_TOKEN=your_codecov_token_here
SONAR_TOKEN=your_sonar_token_here
SONAR_ORGANIZATION=your_org_name
SONAR_PROJECT_KEY=flores-victoria
SNYK_TOKEN=your_snyk_token_here

# ====================================
# MICROSERVICIOS - PUERTOS
# ====================================
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
CART_SERVICE_PORT=3004
ORDER_SERVICE_PORT=3005
PAYMENT_SERVICE_PORT=3006
PROMOTION_SERVICE_PORT=3007
WISHLIST_SERVICE_PORT=3008
REVIEW_SERVICE_PORT=3009
AI_SERVICE_PORT=3010
ADMIN_PANEL_PORT=3011

# ====================================
# SEGURIDAD
# ====================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# DESARROLLO
# ====================================
DEBUG=flores:*
LOG_LEVEL=debug
TEST_DATABASE_URL=postgresql://localhost:5432/flores_victoria_test
TEST_MONGODB_URI=mongodb://localhost:27017/flores_victoria_test
