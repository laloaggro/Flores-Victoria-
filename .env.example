# Archivo de ejemplo de variables de entorno para Flores Victoria
# Copiar a .env y ajustar los valores según el entorno

# Base de datos PostgreSQL
POSTGRES_USER=flores_user
POSTGRES_PASSWORD=generar_contraseña_segura_aquí
POSTGRES_DB=flores_db

# Redis
REDIS_PASSWORD=generar_contraseña_segura_aquí

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=generar_contraseña_segura_aquí

# RabbitMQ
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=generar_contraseña_segura_aquí

# JWT
JWT_SECRET=generar_secreto_seguro_aquí

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Grafana
GRAFANA_ADMIN_PASSWORD=generar_contraseña_segura_aquí

# Email (para el servicio de contacto)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_contraseña_de_aplicación