# ===================================
# FLORES VICTORIA - Environment Variables
# ===================================

# Environment
NODE_ENV=development
# Options: development, staging, production

# Application
APP_NAME=Flores Victoria
APP_VERSION=3.0.0
APP_URL=http://localhost:5173

# API Configuration
API_GATEWAY_URL=http://localhost:3000
API_GATEWAY_PORT=3000
API_TIMEOUT=30000

# Database - MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=products_db
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=flores_victoria
POSTGRES_USERNAME=flores_user
POSTGRES_PASSWORD=flores_password_2024

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
REFRESH_TOKEN_EXPIRATION=30d

# Frontend
VITE_API_URL=http://localhost:3000/api
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_SERVICE_WORKER=true

# Monitoring
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
ENABLE_TRACING=true

# AI Service
AI_SERVICE_API_KEY=
AI_IMAGE_GENERATION_MODEL=stable-diffusion-xl

# Payment Gateway (Mercado Pago / Stripe)
PAYMENT_GATEWAY=mercadopago
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@arreglosvictoria.com

# Security
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_PRODUCT_REVIEWS=true
ENABLE_WISHLIST=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_PROMOTIONS=true

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug, trace
