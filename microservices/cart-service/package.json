{
  "name": "cart-service",
  "version": "1.0.0",
  "description": "Servicio de carrito para Arreglos Victoria",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "prom-client": "^15.1.0",
    "jaeger-client": "^3.19.0",
    "uuid": "^9.0.0",
    "redis": "^4.6.0",
    "winston": "^3.8.0",
    "winston-logstash": "^1.2.1",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/__tests__/**"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
