{
  "name": "contact-service",
  "version": "1.0.0",
  "description": "Servicio de Contacto para Arreglos Victoria",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.8.2",
    "jaeger-client": "^3.19.0",
    "joi": "^17.13.3",
    "mongodb": "^7.0.0",
    "nodemailer": "^7.0.10",
    "opentracing": "^0.14.7",
    "prom-client": "^14.2.0",
    "rate-limit-redis": "^4.3.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
