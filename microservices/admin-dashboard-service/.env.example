# ============================================================
# admin-dashboard-service Environment Variables
# ============================================================
# Copiar este archivo a .env y configurar los valores apropiados

# Server
PORT=3012
NODE_ENV=development

# ==================== SEGURIDAD (OBLIGATORIOS EN PRODUCCIÓN) ====================

# JWT Secret - OBLIGATORIO en producción (mínimo 32 caracteres)
# Generar con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# Contraseña del administrador - OBLIGATORIO en producción
ADMIN_PASSWORD=your_secure_admin_password_here

# Contraseñas de otros usuarios (opcionales - tienen valores por defecto en desarrollo)
WORKER_MARIA_PASSWORD=secure_maria_password
VIEWER_CARLOS_PASSWORD=secure_carlos_password
WORKER_ANA_PASSWORD=secure_ana_password

# Expiración del token JWT
JWT_EXPIRY=8h

# ==================== BASES DE DATOS ====================

# PostgreSQL (para persistir usuarios en producción)
# DATABASE_URL=postgresql://user:password@localhost:5432/admin_dashboard_service_db

# MongoDB (para datos no relacionales)
# MONGODB_URI=mongodb://localhost:27017/admin_dashboard_service_db

# Redis (para caché/sesiones)
# REDIS_URL=redis://localhost:6379

# ==================== URLs DE SERVICIOS ====================

AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
PRODUCT_SERVICE_URL=http://localhost:3009

# Logging
LOG_LEVEL=info
