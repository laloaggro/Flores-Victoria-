{
  "name": "product-service",
  "version": "1.0.0",
  "description": "Product service for Flores Victoria e-commerce",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.22.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.0",
    "redis": "^4.6.8",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/**/__tests__/**"
    ]
  },
  "directories": {
    "logs": "logs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
