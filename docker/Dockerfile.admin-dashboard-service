# Build version: 1.2.0 - Admin Dashboard Service for Railway (uses server.simple.js)
# Context: Root of repository
# Build timestamp: 2024-12-24T20:15:00Z - Force rebuild
FROM node:22-alpine

WORKDIR /app

# Force cache invalidation
ARG CACHEBUST=1
RUN echo "Cache bust: $CACHEBUST"

# Install dependencies directly (avoid file: reference issues)
RUN npm init -y && \
    npm install --no-audit --no-fund \
    express@^4.18.2 \
    cors@^2.8.5 \
    helmet@^7.1.0 \
    axios@^1.6.2 \
    bcryptjs@^2.4.3 \
    dotenv@^16.3.1 \
    jsonwebtoken@^9.0.2

# Create shared stub
RUN mkdir -p shared && printf 'const metricsMiddleware = (name) => (req, res, next) => next();\nconst metricsEndpoint = (name) => (req, res) => res.send("# metrics");\nmodule.exports = { metricsMiddleware, metricsEndpoint };' > ./shared/metrics-simple.js

# Copy source code
COPY microservices/admin-dashboard-service/src/ ./src/
COPY microservices/admin-dashboard-service/dashboard.html ./

ENV NODE_ENV=production
ENV PORT=8080
EXPOSE 8080

# Use server.simple.js to avoid complex shared dependencies
CMD ["node", "src/server.simple.js"]
