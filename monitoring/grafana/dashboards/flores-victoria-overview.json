{
  "dashboard": {
    "id": null,
    "title": "Flores Victoria - Monitoring Dashboard v2.0",
    "tags": ["flores-victoria", "microservices", "e-commerce"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üå∫ Overview - Servicios Activos",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\".*flores-victoria.*\"}",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "üöÄ Requests por Segundo",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=~\".*flores-victoria.*\"}[5m])",
            "legendFormat": "{{service}} - {{method}} {{route}}"
          }
        ],
        "yAxes": [
          {
            "label": "RPS",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "‚è±Ô∏è Latencia de Respuesta (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\".*flores-victoria.*\"}[5m]))",
            "legendFormat": "{{service}} P95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=~\".*flores-victoria.*\"}[5m]))",
            "legendFormat": "{{service}} P50"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "üìä C√≥digos de Estado HTTP",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status_code) (rate(http_requests_total{job=~\".*flores-victoria.*\"}[5m]))",
            "legendFormat": "{{status_code}}"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 }
      },
      {
        "id": 5,
        "title": "üíæ Uso de Memoria por Servicio",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=~\".*flores-victoria.*\"} / 1024 / 1024",
            "legendFormat": "{{service}} Memory (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 }
      },
      {
        "id": 6,
        "title": "üîÑ CPU Usage por Servicio",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\".*flores-victoria.*\"}[5m]) * 100",
            "legendFormat": "{{service}} CPU %"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 }
      },
      {
        "id": 7,
        "title": "üõí E-commerce Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "increase(flores_orders_total[1h])",
            "legendFormat": "Orders/Hour"
          },
          {
            "expr": "increase(flores_cart_additions_total[1h])",
            "legendFormat": "Cart Additions/Hour"
          },
          {
            "expr": "flores_revenue_total",
            "legendFormat": "Revenue Total"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 8,
        "title": "üîó Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "mongodb_connections{job=\"flores-victoria-mongodb\"}",
            "legendFormat": "MongoDB Connections"
          },
          {
            "expr": "pg_stat_database_numbackends{job=\"flores-victoria-postgres\"}",
            "legendFormat": "PostgreSQL Connections"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 9,
        "title": "üö® Error Rate por Servicio",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=~\".*flores-victoria.*\",status_code=~\"5..\"}[5m]) / rate(http_requests_total{job=~\".*flores-victoria.*\"}[5m]) * 100",
            "legendFormat": "{{service}} Error Rate %"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate %",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(flores_deployment_info[1d])",
          "iconColor": "green",
          "title": "Deployment"
        }
      ]
    }
  }
}