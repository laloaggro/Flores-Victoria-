{
  "dashboard": {
    "id": null,
    "title": "Flores Victoria - Security & Performance Dashboard",
    "tags": ["flores-victoria", "security", "performance"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üîí Security Events",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=~\".*flores-victoria.*\"} |= \"security\" or \"violation\" or \"blocked\"",
            "legendFormat": "Security Events"
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "üö´ Rate Limiting - Blocked Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flores_rate_limit_blocked_total[5m])",
            "legendFormat": "{{service}} - Blocked/s"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 3,
        "title": "üõ°Ô∏è CSP Violations",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(flores_csp_violations_total[1h])",
            "legendFormat": "CSP Violations/Hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 20 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 4,
        "title": "‚ö° Web Vitals - Core Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "flores_web_vitals_lcp_seconds",
            "legendFormat": "LCP (Largest Contentful Paint)"
          },
          {
            "expr": "flores_web_vitals_fid_seconds",
            "legendFormat": "FID (First Input Delay)"
          },
          {
            "expr": "flores_web_vitals_cls",
            "legendFormat": "CLS (Cumulative Layout Shift)"
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
      },
      {
        "id": 5,
        "title": "üì± User Agent Analysis",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (browser) (rate(http_requests_total{job=~\".*frontend.*\"}[1h]))",
            "legendFormat": "{{browser}}"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 24 }
      },
      {
        "id": 6,
        "title": "üåê Geographic Distribution",
        "type": "worldmap",
        "targets": [
          {
            "expr": "sum by (country) (rate(http_requests_total{job=~\".*frontend.*\"}[1h]))",
            "legendFormat": "{{country}}"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 24 }
      },
      {
        "id": 7,
        "title": "üìä Performance Budget Violations",
        "type": "table",
        "targets": [
          {
            "expr": "flores_performance_budget_violations",
            "legendFormat": "Metric: {{metric}}, Page: {{page}}"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 24 }
      },
      {
        "id": 8,
        "title": "üî• Top Error Pages",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (route, status_code) (rate(http_requests_total{status_code=~\"4..|5..\"}[1h])))",
            "legendFormat": "{{route}} - {{status_code}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 }
      },
      {
        "id": 9,
        "title": "üéØ Conversion Funnel",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flores_page_views_total{page=\"products\"}[1h])",
            "legendFormat": "Product Views"
          },
          {
            "expr": "rate(flores_cart_additions_total[1h])",
            "legendFormat": "Cart Additions"
          },
          {
            "expr": "rate(flores_checkout_started_total[1h])",
            "legendFormat": "Checkout Started"
          },
          {
            "expr": "rate(flores_orders_completed_total[1h])",
            "legendFormat": "Orders Completed"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{job=~\".*flores-victoria.*\"}, service)",
          "multi": true,
          "includeAll": true
        },
        {
          "name": "environment",
          "type": "custom",
          "options": [
            { "text": "Production", "value": "prod" },
            { "text": "Development", "value": "dev" },
            { "text": "Staging", "value": "staging" }
          ]
        }
      ]
    }
  }
}