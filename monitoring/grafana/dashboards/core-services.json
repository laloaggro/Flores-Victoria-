{
  "dashboard": {
    "title": "Flores Victoria - Core Services",
    "tags": ["flores-victoria", "core"],
    "timezone": "browser",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "title": "AI Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"ai-service\"}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 2,
        "title": "Order Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"order-service\"}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 3,
        "title": "Admin Panel Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"admin-panel\"}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 4,
        "title": "Service Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
      },
      {
        "id": 5,
        "title": "Service Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "{{job}} p95"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 36,
    "version": 1
  },
  "overwrite": true
}
