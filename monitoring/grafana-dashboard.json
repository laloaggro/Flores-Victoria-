{
  "dashboard": {
    "id": null,
    "title": "Flores Victoria - Microservices Dashboard",
    "tags": ["microservices", "nodejs"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "25s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "HTTP Requests per Service",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 9
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "logBase": 1
          },
          {
            "format": "short",
            "logBase": 1
          }
        ]
      },
      {
        "id": 2,
        "type": "graph",
        "title": "Error Rates per Service",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 9
        },
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_count{status=~\"5..\"}[5m])",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "logBase": 1
          },
          {
            "format": "short",
            "logBase": 1
          }
        ]
      },
      {
        "id": 3,
        "type": "singlestat",
        "title": "Total Users",
        "gridPos": {
          "x": 0,
          "y": 9,
          "w": 6,
          "h": 3
        },
        "targets": [
          {
            "expr": "user_count",
            "refId": "A"
          }
        ],
        "format": "none"
      },
      {
        "id": 4,
        "type": "singlestat",
        "title": "Total Products",
        "gridPos": {
          "x": 6,
          "y": 9,
          "w": 6,
          "h": 3
        },
        "targets": [
          {
            "expr": "product_count",
            "refId": "A"
          }
        ],
        "format": "none"
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Request Duration",
        "gridPos": {
          "x": 12,
          "y": 9,
          "w": 12,
          "h": 9
        },
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "s",
            "logBase": 1
          },
          {
            "format": "short",
            "logBase": 1
          }
        ]
      }
    ]
  }
}
