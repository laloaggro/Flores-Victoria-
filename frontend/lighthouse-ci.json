{
  "ci": {
    "collect": {
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "Local:",
      "startServerReadyTimeout": 30000,
      "numberOfRuns": 3,
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/pages/catalog.html",
        "http://localhost:4173/pages/products.html",
        "http://localhost:4173/pages/contact.html",
        "http://localhost:4173/pages/about.html"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.6 }],
        "categories:accessibility": ["warn", { "minScore": 0.8 }],
        "categories:best-practices": ["warn", { "minScore": 0.7 }],
        "categories:seo": ["warn", { "minScore": 0.8 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "reportFilenamePattern": "lighthouse-report-%%DATETIME%%-%%PATHNAME%%.html"
    },
    "server": {
      "port": 9001,
      "storage": "./lighthouse-reports"
    }
  }
}
