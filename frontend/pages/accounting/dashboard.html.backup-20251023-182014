    <!-- Scripts -->
    <script type="module">
        import roleManager from '/js/utils/roleManager.js';
        import Header from '/components/header/Header.js';
        import Footer from '/components/header/Footer.js';

        // Registrar componentes
        if (!customElements.get('site-header')) {
            customElements.define('site-header', Header);
        }
        if (!customElements.get('site-footer')) {
            customElements.define('site-footer', Footer);
        }

        let cashflowChart, pnlChart;

        document.addEventListener('DOMContentLoaded', () => {
            // Verificar permisos de contador
            if (roleManager.redirectIfUnauthorized(roleManager.roles.CONTADOR)) {
                return;
            }

            // Personalizar dashboard para el contador
            const user = roleManager.getCurrentUser();
            if (user) {
                document.getElementById('accountantWelcome').textContent = 
                    `Bienvenido, ${user.name || user.email}`;
            }

            // Inicializar gráficos
            initializeCharts();
            
            // Cargar datos del dashboard
            loadAccountingDashboard();
            
            // Actualizar cada 5 minutos
            setInterval(loadAccountingDashboard, 300000);
        });

        function initializeCharts() {
            // Gráfico de Flujo de Caja
            const cashflowCtx = document.getElementById('cashflowChart').getContext('2d');
            cashflowChart = new Chart(cashflowCtx, {
                type: 'line',
                data: {
                    labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Ingresos',
                        data: [2100000, 2300000, 2450000, 2200000, 2600000, 2450680],
                        borderColor: '#28a745',
                        backgroundColor: 'rgba(40, 167, 69, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'Egresos',
                        data: [1800000, 1900000, 1823420, 1750000, 2100000, 1823420],
                        borderColor: '#dc3545',
                        backgroundColor: 'rgba(220, 53, 69, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + (value / 1000000).toFixed(1) + 'M';
                                }
                            }
                        }
                    }
                }
            });

            // Gráfico de P&G
            const pnlCtx = document.getElementById('pnlChart').getContext('2d');
            pnlChart = new Chart(pnlCtx, {
                type: 'bar',
                data: {
                    labels: ['Ventas', 'Costo Ventas', 'Gastos Operativos', 'Gastos Financieros', 'Utilidad Neta'],
                    datasets: [{
                        data: [2450680, -1200000, -523420, -100000, 627260],
                        backgroundColor: [
                            '#28a745',
                            '#dc3545',
                            '#ffc107',
                            '#fd7e14',
                            '#2c5530'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            ticks: {
                                callback: function(value) {
                                    return '$' + (value / 1000).toLocaleString() + 'K';
                                }
                            }
                        }
                    }
                }
            });
        }

        async function loadAccountingDashboard() {
            try {
                console.log('💼 Cargando dashboard contable...');
                
                // Aquí irían las llamadas reales a la API contable
                // const financialData = await fetch('/api/accounting/dashboard').then(r => r.json());
                // updateFinancialData(financialData);
                
            } catch (error) {
                console.error('Error cargando dashboard contable:', error);
            }
        }

        // Funciones de pestañas
        window.showAccountingTab = (tabName) => {
            // Ocultar todas las pestañas
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.querySelectorAll('.accounting-tab').forEach(tab => {
                tab.classList.remove('active');
            });

            // Mostrar la pestaña seleccionada
            document.getElementById(tabName + '-tab').classList.add('active');
            event.target.classList.add('active');
        };

        // Funciones de reportes
        window.generateReport = (reportType) => {
            alert(`📊 Generando reporte: ${reportType.toUpperCase()}`);
        };

        // Funciones de acciones
        window.createInvoice = () => {
            alert('📄 Módulo de facturación - En desarrollo');
        };

        window.registerPayment = () => {
            alert('💰 Registro de pagos - En desarrollo');
        };

        window.bankReconciliation = () => {
            alert('🏦 Conciliación bancaria - En desarrollo');
        };

        window.journalEntry = () => {
            alert('📚 Asientos contables - En desarrollo');
        };

        window.manageSuppliers = () => {
            alert('🚚 Gestión de proveedores - En desarrollo');
        };

        window.taxDeclaration = () => {
            alert('📋 Declaraciones tributarias - En desarrollo');
        };

        console.log('💼 Dashboard Contable inicializado');
    </script>
</body>
