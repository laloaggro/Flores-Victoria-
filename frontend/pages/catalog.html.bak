        // Funcionalidad de filtros y b√∫squeda
        class ProductCatalog {
            constructor() {
                this.products = productsData;
                this.filteredProducts = [...this.products];
                this.currentFilters = {
                    occasion: 'all',
                    type: 'all',
                    color: 'all',
                    category: 'all',
                    search: ''
                };
                
                this.init();
            }

            init() {
                this.renderProducts();
                this.initEventListeners();
                this.initTheme();
            }

            initEventListeners() {
                // Filtros de ocasi√≥n
                document.querySelectorAll('#occasionFilters .filter-tag').forEach(tag => {
                    tag.addEventListener('click', (e) => {
                        this.handleFilterClick(e.target, 'occasion');
                    });
                });

                // Filtros de tipo
                document.querySelectorAll('#typeFilters .filter-tag').forEach(tag => {
                    tag.addEventListener('click', (e) => {
                        this.handleFilterClick(e.target, 'type');
                    });
                });

                // Filtros de color
                document.querySelectorAll('#colorFilters .filter-tag').forEach(tag => {
                    tag.addEventListener('click', (e) => {
                        this.handleFilterClick(e.target, 'color');
                    });
                });

                // Tabs de categor√≠a
                document.querySelectorAll('.category-tab').forEach(tab => {
                    tab.addEventListener('click', (e) => {
                        this.handleCategoryClick(e.target);
                    });
                });

                // B√∫squeda
                const searchInput = document.getElementById('searchInput');
                const clearSearchBtn = document.getElementById('clearSearch');
                
                searchInput.addEventListener('input', (e) => {
                    this.currentFilters.search = e.target.value.toLowerCase();
                    this.applyFilters();
                    
                    // Mostrar/ocultar bot√≥n de limpiar
                    clearSearchBtn.style.display = e.target.value ? 'flex' : 'none';
                });
                
                // Limpiar b√∫squeda
                clearSearchBtn.addEventListener('click', () => {
                    searchInput.value = '';
                    this.currentFilters.search = '';
                    this.applyFilters();
                    clearSearchBtn.style.display = 'none';
                    searchInput.focus();
                });
            }

            handleFilterClick(element, filterType) {
                // Remover active de hermanos
                element.parentNode.querySelectorAll('.filter-tag').forEach(tag => {
                    tag.classList.remove('active');
                });
                
                // Agregar active al clickeado
                element.classList.add('active');
                
                // Actualizar filtro
                this.currentFilters[filterType] = element.dataset.filter;
                this.applyFilters();
            }

            handleCategoryClick(element) {
                // Remover active de hermanos
                element.parentNode.querySelectorAll('.category-tab').forEach(tab => {
                    tab.classList.remove('active');
                });
                
                // Agregar active al clickeado
                element.classList.add('active');
                
                // Actualizar filtro de categor√≠a
                this.currentFilters.category = element.dataset.category;
                this.applyFilters();
            }

            applyFilters() {
                this.filteredProducts = this.products.filter(product => {
                    // Filtro de ocasi√≥n
                    if (this.currentFilters.occasion !== 'all' && product.category !== this.currentFilters.occasion) {
                        return false;
                    }

                    // Filtro de tipo
                    if (this.currentFilters.type !== 'all' && product.type !== this.currentFilters.type) {
                        return false;
                    }

                    // Filtro de color
                    if (this.currentFilters.color !== 'all' && product.color !== this.currentFilters.color) {
                        return false;
                    }

                    // Filtro de categor√≠a especial
                    if (this.currentFilters.category !== 'all') {
                        if (this.currentFilters.category === 'featured' && !product.featured) return false;
                        if (this.currentFilters.category === 'new' && !product.new) return false;
                        if (this.currentFilters.category === 'bestsellers' && !product.bestseller) return false;
                    }

                    // Filtro de b√∫squeda (nombre + descripci√≥n)
                    if (this.currentFilters.search) {
                        const searchQuery = this.currentFilters.search;
                        const matchesName = product.name.toLowerCase().includes(searchQuery);
                        const matchesDescription = product.description?.toLowerCase().includes(searchQuery);
                        if (!matchesName && !matchesDescription) {
                            return false;
                        }
                    }

                    return true;
                });

                this.renderProducts();
            }

            renderProducts() {
                const grid = document.getElementById('productsGrid');
                
                if (this.filteredProducts.length === 0) {
                    grid.innerHTML = `
                        <div style="grid-column: 1/-1; text-align: center; padding: 3rem 0; color: var(--gray);">
                            <i class="fas fa-search" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;"></i>
                            <h3>No se encontraron productos</h3>
                            <p>Intenta modificar los filtros de b√∫squeda</p>
                        </div>
                    `;
                    return;
                }

                grid.innerHTML = this.filteredProducts.map(product => `
                    <div class="product-card" data-product-id="${product.id}">
                        <div class="product-image">
                            <i class="fas fa-image"></i>
                            ${product.featured ? '<div class="product-badge">Destacado</div>' : ''}
                            ${product.new ? '<div class="product-badge" style="background: var(--accent);">Nuevo</div>' : ''}
                            ${product.bestseller ? '<div class="product-badge" style="background: var(--secondary); color: var(--dark);">M√°s Vendido</div>' : ''}
                            <button class="wishlist-btn" onclick="addToWishlist(${product.id})">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                        <div class="product-content">
                            <div class="product-category">${this.getCategoryName(product.category)}</div>
                            <h3 class="product-title">${product.name}</h3>
                            <p class="product-description">${product.description}</p>
                            <div class="product-details">
                                <span class="product-price">$${product.price.toLocaleString()}</span>
                                <span class="product-size">${product.size}</span>
                            </div>
                            <div class="product-actions">
                                <button class="btn btn-primary" onclick="addToCart(${product.id})">
                                    <i class="fas fa-shopping-cart"></i> Agregar al Carrito
                                </button>
                                <button class="btn btn-outline" onclick="viewProduct(${product.id})">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `).join('');
            }

            getCategoryName(category) {
                const categoryNames = {
                    'aniversario': 'Aniversario & Amor',
                    'cumpleanos': 'Cumplea√±os',
                    'graduacion': 'Graduaci√≥n',
                    'nacimiento': 'Nacimiento & Beb√©',
                    'getwell': 'Recuperaci√≥n',
                    'funeral': 'Funeral & Simpat√≠a'
                };
                return categoryNames[category] || 'Ocasi√≥n Especial';
            }

            initTheme() {
                const themeToggle = document.getElementById('theme-toggle');
                const themeIcon = document.getElementById('theme-icon');
                
                // Cargar tema guardado
                const savedTheme = localStorage.getItem('theme');
                const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                const currentTheme = savedTheme || (systemPrefersDark ? 'dark' : 'light');
                
                this.setTheme(currentTheme);
                
                themeToggle.addEventListener('click', () => {
                    const currentTheme = document.body.getAttribute('data-theme');
                    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                    this.setTheme(newTheme);
                    localStorage.setItem('theme', newTheme);
                });
            }

            setTheme(theme) {
                const themeIcon = document.getElementById('theme-icon');
                document.body.setAttribute('data-theme', theme);
                themeIcon.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
            }
        }

        // Funciones globales
        function addToCart(productId) {
            const product = productsData.find(p => p.id === productId);
            if (product) {
                // Obtener carrito actual
                let cart = JSON.parse(localStorage.getItem('cart') || '[]');
                
                // Buscar si el producto ya est√° en el carrito
                const existingItem = cart.find(item => item.id === productId);
                
                if (existingItem) {
                    existingItem.quantity += 1;
                } else {
                    cart.push({
                        id: product.id,
                        name: product.name,
                        price: product.price,
                        image: product.image || `/images/products/placeholder.jpg`,
                        category: product.category,
                        quantity: 1
                    });
                }
                
                localStorage.setItem('cart', JSON.stringify(cart));
                showNotification(`${product.name} agregado al carrito üõí`, 'success');
                
                // Actualizar contador del carrito si existe
                updateCartCount();
            }
        }
        
        // Actualizar contador de carrito
        function updateCartCount() {
            const cart = JSON.parse(localStorage.getItem('cart') || '[]');
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            const cartBadge = document.getElementById('cart-count');
            if (cartBadge) {
                cartBadge.textContent = totalItems;
            }
        }

        function addToWishlist(productId) {
            const product = productsData.find(p => p.id === productId);
            if (product) {
                // Obtener wishlist actual (array de objetos completos)
                let wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
                
                // Verificar si el producto ya est√° en wishlist
                const existingIndex = wishlist.findIndex(item => item.id === productId);
                
                if (existingIndex === -1) {
                    // Agregar producto completo a wishlist
                    wishlist.push({
                        id: product.id,
                        name: product.name,
                        price: product.price,
                        image: product.image || `/images/products/placeholder.jpg`,
                        category: product.category,
                        description: product.description
                    });
                    localStorage.setItem('wishlist', JSON.stringify(wishlist));
                    showNotification(`${product.name} agregado a favoritos ‚ù§Ô∏è`, 'success');
                    
                    // Actualizar icono del bot√≥n
                    const btn = event.target.closest('.wishlist-btn');
                    if (btn) {
                        btn.innerHTML = '<i class="fas fa-heart" style="color: var(--primary);"></i>';
                    }
                    
                    // Actualizar contador en header si existe
                    updateWishlistCount();
                } else {
                    // Remover de wishlist si ya existe
                    wishlist.splice(existingIndex, 1);
                    localStorage.setItem('wishlist', JSON.stringify(wishlist));
                    showNotification(`${product.name} removido de favoritos`, 'info');
                    
                    // Actualizar icono del bot√≥n
                    const btn = event.target.closest('.wishlist-btn');
                    if (btn) {
                        btn.innerHTML = '<i class="far fa-heart"></i>';
                    }
                    
                    updateWishlistCount();
                }
            }
        }
        
        // Actualizar contador de wishlist
        function updateWishlistCount() {
            const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            const badge = document.querySelector('.nav-actions .badge');
            if (badge) {
                badge.textContent = wishlist.length;
            }
        }

        function viewProduct(productId) {
            // Aqu√≠ ir√≠a la navegaci√≥n a la p√°gina de detalle del producto
            console.log('Ver producto:', productId);
            showNotification('Funcionalidad de vista detallada pr√≥ximamente', 'info');
        }

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: ${type === 'success' ? 'var(--accent)' : type === 'error' ? '#dc3545' : 'var(--primary)'};
                color: white;
                padding: 1rem 1.5rem;
                border-radius: var(--border-radius);
                box-shadow: var(--shadow);
                z-index: 1000;
                transform: translateX(100%);
                transition: var(--transition);
            `;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }

        // Inicializar cuando el DOM est√© listo
        document.addEventListener('DOMContentLoaded', () => {
            new ProductCatalog();
            
            // Inicializar contadores
            updateWishlistCount();
            updateCartCount();
            
            // Actualizar iconos de wishlist en productos
            updateWishlistIcons();
        });
        
        // Actualizar iconos de coraz√≥n en productos ya en wishlist
        function updateWishlistIcons() {
            const wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            const wishlistIds = wishlist.map(item => item.id);
            
            document.querySelectorAll('.wishlist-btn').forEach(btn => {
                const productCard = btn.closest('.product-card');
                const productId = parseInt(productCard.dataset.productId);
                
                if (wishlistIds.includes(productId)) {
                    btn.innerHTML = '<i class="fas fa-heart" style="color: var(--primary);"></i>';
                } else {
                    btn.innerHTML = '<i class="far fa-heart"></i>';
                }
            });
        }
    </script>
