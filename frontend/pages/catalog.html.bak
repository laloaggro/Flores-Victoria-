            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray);
        }

        /* Products Section */
        .products-section {
            padding: 3rem 0;
            background: var(--bg-color);
        }

        .section-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .section-title {
            font-family: var(--font-heading);
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--text-color);
