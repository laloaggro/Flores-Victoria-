    <link rel="stylesheet" href="/css/design-system.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        /* Estilos específicos para el panel de administración */
        .admin-wrapper {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--admin-primary) 0%, var(--admin-secondary) 100%);
        }
        
        .admin-header {
            background: var(--white);
            box-shadow: var(--shadow-md);
            padding: var(--space-4) 0;
        }
        
        .admin-header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .admin-brand {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }
        
        .admin-brand img {
            width: 50px;
            height: 50px;
        }
        
        .admin-brand h1 {
            font-size: var(--text-2xl);
            font-weight: var(--font-bold);
            color: var(--admin-primary);
            margin: 0;
        }
        
        .admin-user-info {
            display: flex;
            align-items: center;
            gap: var(--space-4);
        }
        
        .admin-main {
            padding: var(--space-8) 0;
        }
        
        .admin-card {
            background: var(--white);
            border-radius: var(--radius-xl);
            padding: var(--space-8);
            box-shadow: var(--shadow-xl);
            margin-bottom: var(--space-6);
        }
        
        .admin-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: var(--space-6);
            margin-top: var(--space-6);
        }
        
        .admin-stat-card {
            background: linear-gradient(135deg, var(--admin-primary), var(--admin-secondary));
            color: var(--white);
            padding: var(--space-6);
            border-radius: var(--radius-lg);
            text-align: center;
            transition: transform var(--transition);
        }
        
        .admin-stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }
        
        .admin-stat-card .icon {
            font-size: 3rem;
            margin-bottom: var(--space-4);
            opacity: 0.9;
        }
        
        .admin-stat-card .value {
            font-size: var(--text-4xl);
            font-weight: var(--font-bold);
            margin-bottom: var(--space-2);
        }
        
        .admin-stat-card .label {
            font-size: var(--text-sm);
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        
        .admin-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: var(--space-4);
            margin-top: var(--space-6);
        }
        
        .admin-action-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: var(--space-3);
            padding: var(--space-6);
            background: var(--white);
            border: 2px solid var(--gray-lightest);
            border-radius: var(--radius-lg);
            text-decoration: none;
            color: var(--dark);
            transition: all var(--transition);
        }
        
        .admin-action-btn:hover {
            border-color: var(--admin-primary);
            background: rgba(102, 126, 234, 0.05);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }
        
        .admin-action-btn .icon {
            font-size: 2.5rem;
            color: var(--admin-primary);
        }
        
        .admin-action-btn .text {
            font-weight: var(--font-semibold);
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="admin-wrapper">
        <!-- Header -->
        <header class="admin-header">
            <div class="container">
                <div class="admin-brand">
                    <img src="/logo.svg" alt="Arreglos Victoria Logo">
                    <div>
                        <h1>Panel de Administración</h1>
                        <p class="text-sm text-secondary">Arreglos Victoria</p>
                    </div>
                </div>
                
                <div class="admin-user-info">
                    <span class="badge badge-success" id="admin-role">Administrador</span>
                    <button class="btn btn-admin btn-sm" onclick="window.location.href='/'">
                        <i class="fas fa-home"></i> Ver Sitio
                    </button>
                    <button class="btn btn-outline btn-sm" onclick="handleLogout()">
                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                    </button>
                </div>
            </div>
        </header>
        
        <!-- Main Content -->
        <main class="admin-main">
            <div class="container">
                <!-- Mensaje de bienvenida -->
                <div class="admin-card">
                    <h2 class="text-3xl font-bold mb-4">Bienvenido al Panel de Administración</h2>
                    <p class="text-lg text-secondary">Gestiona todos los aspectos de tu tienda desde aquí.</p>
                </div>
                
                <!-- Estadísticas rápidas -->
                <div class="admin-grid">
                    <div class="admin-stat-card">
                        <div class="icon"><i class="fas fa-box"></i></div>
                        <div class="value" id="stat-products">0</div>
                        <div class="label">Productos</div>
                    </div>
                    
                    <div class="admin-stat-card">
                        <div class="icon"><i class="fas fa-shopping-cart"></i></div>
                        <div class="value" id="stat-orders">0</div>
                        <div class="label">Pedidos</div>
                    </div>
                    
                    <div class="admin-stat-card">
                        <div class="icon"><i class="fas fa-users"></i></div>
                        <div class="value" id="stat-users">0</div>
                        <div class="label">Usuarios</div>
                    </div>
                    
                    <div class="admin-stat-card">
                        <div class="icon"><i class="fas fa-dollar-sign"></i></div>
                        <div class="value" id="stat-revenue">$0</div>
                        <div class="label">Ingresos</div>
                    </div>
                </div>
                
                <!-- Acciones rápidas -->
                <div class="admin-card">
                    <h3 class="text-2xl font-bold mb-6">Acciones Rápidas</h3>
                    <div class="admin-actions">
                        <a href="./admin-products.html" class="admin-action-btn">
                            <div class="icon"><i class="fas fa-box-open"></i></div>
                            <div class="text">Gestionar Productos</div>
                        </a>
                        
                        <a href="./admin-orders.html" class="admin-action-btn">
                            <div class="icon"><i class="fas fa-receipt"></i></div>
                            <div class="text">Ver Pedidos</div>
                        </a>
                        
                        <a href="./admin-users.html" class="admin-action-btn">
                            <div class="icon"><i class="fas fa-user-friends"></i></div>
                            <div class="text">Gestionar Usuarios</div>
                        </a>
                        
                        <a href="http://localhost:9000" target="_blank" class="admin-action-btn">
                            <div class="icon"><i class="fas fa-chart-line"></i></div>
                            <div class="text">Panel Avanzado</div>
                        </a>
                    </div>
                </div>
                
                <!-- Actividad reciente -->
                <div class="admin-card">
                    <h3 class="text-2xl font-bold mb-4">Actividad Reciente</h3>
                    <div id="recent-activity" class="space-y-4">
                        <p class="text-secondary">Cargando actividad...</p>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Footer simple -->
        <footer class="admin-card" style="margin-top: var(--space-8);">
            <div class="text-center text-secondary">
                <p>&copy; 2025 Arreglos Victoria. Panel de Administración v2.0</p>
            </div>
        </footer>
    </div>
    
    <!-- Scripts -->
    <script>
        // Función para cargar estadísticas
        async function loadStats() {
            try {
                // Simulación de carga de estadísticas
                // En producción, estas llamadas serían a tu API
                document.getElementById('stat-products').textContent = '127';
                document.getElementById('stat-orders').textContent = '43';
                document.getElementById('stat-users').textContent = '89';
                document.getElementById('stat-revenue').textContent = '$12,450';
                
                // Cargar actividad reciente
                const activityContainer = document.getElementById('recent-activity');
                activityContainer.innerHTML = `
                    <div class="flex items-center gap-4 p-4 border border-gray-lightest rounded-lg">
                        <div class="icon" style="font-size: 1.5rem; color: var(--success);">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="flex-1">
                            <p class="font-semibold">Nuevo pedido #1234</p>
                            <p class="text-sm text-secondary">Hace 5 minutos</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4 p-4 border border-gray-lightest rounded-lg">
                        <div class="icon" style="font-size: 1.5rem; color: var(--info);">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="flex-1">
                            <p class="font-semibold">Nuevo usuario registrado</p>
                            <p class="text-sm text-secondary">Hace 15 minutos</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-4 p-4 border border-gray-lightest rounded-lg">
                        <div class="icon" style="font-size: 1.5rem; color: var(--warning);">
                            <i class="fas fa-box"></i>
                        </div>
                        <div class="flex-1">
                            <p class="font-semibold">Producto actualizado</p>
                            <p class="text-sm text-secondary">Hace 30 minutos</p>
                        </div>
                    </div>
                `;
            } catch (error) {
                console.error('Error al cargar estadísticas:', error);
            }
        }
        
        // Función para manejar el cierre de sesión
        function handleLogout() {
            if (confirm('¿Estás seguro que deseas cerrar sesión?')) {
                // Limpiar datos de sesión
                localStorage.removeItem('user');
                sessionStorage.removeItem('authToken');
                // Redirigir al login
                window.location.href = '/pages/login.html';
            }
        }
        
        // Cargar datos al cargar la página
        document.addEventListener('DOMContentLoaded', () => {
            loadStats();
            
            // Verificar si el usuario está autenticado
            const user = JSON.parse(localStorage.getItem('user') || '{}');
            if (!user.role || user.role !== 'admin') {
                // Si no es admin, mostrar advertencia
                console.warn('Usuario no autorizado para acceder al panel de administración');
                // En producción, redirigir al login
                // window.location.href = '/pages/login.html';
            }
        });
    </script>
</body>
