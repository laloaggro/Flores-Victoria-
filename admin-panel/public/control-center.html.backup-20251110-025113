        <!-- Navigation -->
        <div class="navigation">
            <a href="/" class="nav-btn">üè† Inicio</a>
            <a href="/docs/index.html" class="nav-btn">üìö Documentaci√≥n</a>
            <a href="http://localhost:3000/admin-site/pages/system-admin.html" class="nav-btn" target="_blank">üõ†Ô∏è Administraci√≥n Sistema</a>
            <a href="http://localhost:3002/ai/recommendations" class="nav-btn" target="_blank">ü§ñ AI Service</a>
            <a href="http://localhost:3004/api/orders" class="nav-btn" target="_blank">üõí Order Service</a>
        </div>

        <!-- Main Grid -->
        <div class="grid">
            <!-- Services Status -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">üöÄ</div>
                    <h3>Estado de Servicios</h3>
                </div>
                <div class="services-grid" id="servicesGrid">
                    <div class="service-item">
                        <div class="service-status status-unknown"></div>
                        <div>Cargando...</div>
                    </div>
                </div>
                <div class="quick-actions">
                    <button class="btn btn-success" onclick="startAllServices()">‚ñ∂Ô∏è Iniciar Todos</button>
                    <button class="btn btn-danger" onclick="stopAllServices()">‚èπÔ∏è Detener Todos</button>
                    <button class="btn btn-warning" onclick="restartAllServices()">üîÑ Reiniciar Todos</button>
                </div>
            </div>

            <!-- System Metrics -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">üìä</div>
                    <h3>M√©tricas del Sistema</h3>
                </div>
                <div class="metrics-grid" id="metricsGrid">
                    <div class="metric-item">
                        <div class="metric-value" id="servicesActive">-</div>
                        <div class="metric-label">Servicios Activos</div>
                    </div>
                    <div class="metric-item">
                        <div class="metric-value" id="uptime">-</div>
                        <div class="metric-label">Uptime</div>
                    </div>
                    <div class="metric-item">
                        <div class="metric-value" id="memoryUsage">-</div>
                        <div class="metric-label">Memoria</div>
                    </div>
