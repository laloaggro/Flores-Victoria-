    <!-- Refresh Button -->
    <button class="refresh-btn" onclick="refreshAll()" title="Actualizar Todo">
        <span id="refreshIcon">üîÑ</span>
    </button>

    <script>
        // Variables globales
        let refreshInterval;
        let services = [];

        // Inicializar cuando se carga la p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            refreshAll();
            startAutoRefresh();
        });

        // Auto-refresh cada 30 segundos
        function startAutoRefresh() {
            refreshInterval = setInterval(refreshAll, 30000);
        }

        // Funci√≥n principal de refresh
        async function refreshAll() {
            const icon = document.getElementById('refreshIcon');
            icon.innerHTML = '‚è≥';
            icon.classList.add('loading');
            
            try {
                await Promise.all([
                    loadServicesStatus(),
                    loadSystemMetrics(),
                    updateUptime()
                ]);
            } catch (error) {
                console.error('Error refreshing data:', error);
            } finally {
                icon.innerHTML = 'üîÑ';
                icon.classList.remove('loading');
            }
        }

        // Cargar estado de servicios
        async function loadServicesStatus() {
            try {
                // Simular datos por ahora (luego conectar con API real)
                const mockServices = [
                    { name: 'Admin Panel', status: 'running', port: '3021' },
                    { name: 'AI Service', status: 'running', port: '3002' },
                    { name: 'Order Service', status: 'running', port: '3004' }
                ];

                const grid = document.getElementById('servicesGrid');
                grid.innerHTML = '';

                mockServices.forEach(service => {
                    const item = document.createElement('div');
                    item.className = 'service-item';
                    item.innerHTML = `
                        <div class="service-status status-${service.status}"></div>
                        <div><strong>${service.name}</strong></div>
                        <div>Puerto: ${service.port}</div>
                        <div style="margin-top: 10px;">
                            <button class="btn btn-success" onclick="startService('${service.name}')">‚ñ∂Ô∏è</button>
                            <button class="btn btn-danger" onclick="stopService('${service.name}')">‚èπÔ∏è</button>
                            <button class="btn btn-warning" onclick="restartService('${service.name}')">üîÑ</button>
                        </div>
                    `;
                    grid.appendChild(item);
                });

                services = mockServices;
                updateServicesMetric();

            } catch (error) {
                console.error('Error loading services:', error);
                showError('Error cargando estado de servicios');
            }
        }

        // Cargar m√©tricas del sistema
        async function loadSystemMetrics() {
            try {
                // Simular m√©tricas
                document.getElementById('memoryUsage').textContent = '65%';
                document.getElementById('responseTime').textContent = '<1ms';
                
                // Calcular tiempo de respuesta real del Admin Panel
                const startTime = performance.now();
                try {
                    await fetch('/health');
                    const endTime = performance.now();
                    const responseTime = Math.round(endTime - startTime);
                    document.getElementById('responseTime').textContent = `${responseTime}ms`;
                } catch (e) {
                    document.getElementById('responseTime').textContent = 'N/A';
                }

            } catch (error) {
                console.error('Error loading metrics:', error);
            }
        }

        // Actualizar uptime
        function updateUptime() {
            const now = new Date();
            const hours = now.getHours();
            const minutes = now.getMinutes();
            document.getElementById('uptime').textContent = `${hours}h ${minutes}m`;
        }

        // Actualizar m√©trica de servicios activos
        function updateServicesMetric() {
            const activeServices = services.filter(s => s.status === 'running').length;
            document.getElementById('servicesActive').textContent = `${activeServices}/${services.length}`;
        }

        // Funciones de control de servicios
        async function startService(serviceName) {
            showAction(`Iniciando ${serviceName}...`);
            // Aqu√≠ se conectar√≠a con la API real
            setTimeout(() => {
                showSuccess(`${serviceName} iniciado correctamente`);
                refreshAll();
            }, 2000);
        }

        async function stopService(serviceName) {
            showAction(`Deteniendo ${serviceName}...`);
            setTimeout(() => {
                showSuccess(`${serviceName} detenido correctamente`);
                refreshAll();
            }, 2000);
        }

        async function restartService(serviceName) {
            showAction(`Reiniciando ${serviceName}...`);
            setTimeout(() => {
                showSuccess(`${serviceName} reiniciado correctamente`);
                refreshAll();
            }, 3000);
        }

        async function startAllServices() {
            showAction('Iniciando todos los servicios...');
            setTimeout(() => {
                showSuccess('Todos los servicios iniciados');
                refreshAll();
            }, 3000);
        }

        async function stopAllServices() {
            showAction('Deteniendo todos los servicios...');
            setTimeout(() => {
                showSuccess('Todos los servicios detenidos');
                refreshAll();
            }, 3000);
        }

        async function restartAllServices() {
            showAction('Reiniciando todos los servicios...');
            setTimeout(() => {
                showSuccess('Todos los servicios reiniciados');
                refreshAll();
            }, 5000);
        }

        // Cargar logs
        async function loadLogs() {
            const service = document.getElementById('logService').value;
            const container = document.getElementById('logContainer');
            
            if (!service) {
                container.innerHTML = '<div class="log-line log-info">Selecciona un servicio para ver sus logs...</div>';
                return;
            }

            container.innerHTML = '<div class="log-line log-info">Cargando logs...</div>';

            // Simular logs
            setTimeout(() => {
                const mockLogs = [
                    { level: 'info', message: `${service} iniciado correctamente`, time: '10:30:15' },
                    { level: 'success', message: 'Health check OK', time: '10:30:20' },
                    { level: 'info', message: 'Procesando solicitud...', time: '10:30:25' },
                    { level: 'success', message: 'Respuesta enviada exitosamente', time: '10:30:30' }
                ];

                container.innerHTML = mockLogs.map(log => 
                    `<div class="log-line log-${log.level}">[${log.time}] ${log.message}</div>`
                ).join('');
            }, 1000);
        }

        // Acciones r√°pidas
        async function runHealthCheck() {
            showAction('Ejecutando health check...');
            setTimeout(() => {
                showSuccess('Health check completado - Sistema OK');
            }, 2000);
        }

        async function runMaintenance() {
            showAction('Ejecutando mantenimiento...');
            setTimeout(() => {
                showSuccess('Mantenimiento completado');
            }, 3000);
        }

        async function generateAnalytics() {
            showAction('Generando analytics...');
            setTimeout(() => {
                showSuccess('Reporte de analytics generado');
            }, 2000);
        }

        async function viewUrls() {
            const urls = [
                'üåê Admin Panel: http://localhost:3021',
                'üìö Documentaci√≥n: http://localhost:3021/documentation.html',
                'ü§ñ AI Service: http://localhost:3002/ai/recommendations',
                'üõí Order Service: http://localhost:3004/api/orders'
            ];
            showInfo(urls.join('\\n'));
        }

        async function cleanupSystem() {
            showAction('Limpiando sistema...');
            setTimeout(() => {
                showSuccess('Sistema limpiado correctamente');
            }, 2000);
        }

        async function backupSystem() {
            showAction('Creando backup...');
            setTimeout(() => {
                showSuccess('Backup creado exitosamente');
            }, 3000);
        }

        async function updateSystem() {
            showAction('Actualizando sistema...');
            setTimeout(() => {
                showSuccess('Sistema actualizado');
            }, 4000);
        }

        async function startWatchdog() {
            showAction('Iniciando watchdog...');
            setTimeout(() => {
                showSuccess('Watchdog iniciado - Monitoring activo');
            }, 2000);
        }

        async function viewDashboard() {
            window.open('/analytics.html', '_blank');
        }

        // Funciones de UI
        function showAction(message) {
            const result = document.getElementById('actionResult');
            result.style.display = 'block';
            result.style.background = '#faf089';
            result.style.color = '#744210';
            result.textContent = message;
        }

        function showSuccess(message) {
            const result = document.getElementById('actionResult');
            result.style.display = 'block';
            result.style.background = '#68d391';
            result.style.color = '#22543d';
            result.textContent = '‚úÖ ' + message;
        }

        function showError(message) {
            const result = document.getElementById('actionResult');
            result.style.display = 'block';
            result.style.background = '#fc8181';
            result.style.color = '#742a2a';
            result.textContent = '‚ùå ' + message;
        }

        function showInfo(message) {
            const result = document.getElementById('actionResult');
            result.style.display = 'block';
            result.style.background = '#63b3ed';
            result.style.color = '#2c5282';
            result.style.whiteSpace = 'pre-line';
            result.textContent = 'üìã ' + message;
        }

        // Cleanup al cerrar la p√°gina
        window.addEventListener('beforeunload', function() {
            if (refreshInterval) {
                clearInterval(refreshInterval);
            }
        });
    </script>
</body>
</html>