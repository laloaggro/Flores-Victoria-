{
  "name": "flores-victoria",
  "version": "1.0.0",
  "description": "Florería familiar con más de 20 años de experiencia",
  "main": "index.js",
  "scripts": {
    "start": "bash start-all.sh",
    "stop": "bash stop-all.sh",
    "start:frontend": "cd frontend && python3 -m http.server 5173",
    "start:backend": "cd backend && npm start",
    "start:admin": "cd admin-panel && npm start",
    "install:all": "cd backend && npm install && cd ../admin-panel && npm install",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit-tests",
    "test:integration": "jest --testPathPattern=tests/integration-tests",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "floreria",
    "flores",
    "arreglos",
    "victoria"
  ],
  "author": "Flores Victoria",
  "license": "MIT",
  "dependencies": {
    "mongodb": "^6.20.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "k6": "^0.0.0"
  }
}
