{
  "name": "flores-victoria",
  "version": "1.0.0",
  "description": "Florería familiar con más de 20 años de experiencia",
  "main": "index.js",
  "scripts": {
    "start": "bash start-all.sh",
    "stop": "bash stop-all.sh",
    "start:frontend": "cd frontend && python3 -m http.server 5173",
    "start:backend": "cd backend && npm start",
    "start:admin": "cd admin-panel && npm start",
    "install:all": "cd backend && npm install && cd ../admin-panel && npm install",
    "dev:stack": "docker compose -f docker-compose.dev.yml up --build",
    "dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "dev:down": "docker compose -f docker-compose.dev.yml down",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "dev:logs:gateway": "docker compose -f docker-compose.dev.yml logs -f api-gateway",
    "dev:logs:auth": "docker compose -f docker-compose.dev.yml logs -f auth-service",
    "dev:logs:products": "docker compose -f docker-compose.dev.yml logs -f product-service",
    "dev:logs:frontend": "docker compose -f docker-compose.dev.yml logs -f frontend",
    "dev:restart:gateway": "docker compose -f docker-compose.dev.yml restart api-gateway",
    "dev:restart:auth": "docker compose -f docker-compose.dev.yml restart auth-service",
    "dev:restart:products": "docker compose -f docker-compose.dev.yml restart product-service",
    "dev:restart:frontend": "docker compose -f docker-compose.dev.yml restart frontend",
    "dev:ps": "docker compose -f docker-compose.dev.yml ps",
    "dev:clean": "docker compose -f docker-compose.dev.yml down -v --remove-orphans",
    "prod:stack": "docker compose -f docker-compose.prod.yml up --build",
    "prod:up": "docker compose -f docker-compose.prod.yml up",
    "prod:down": "docker compose -f docker-compose.prod.yml down",
    "test": "jest",
    "test:unit": "jest tests/unit-tests",
    "test:integration": "jest tests/integration-tests",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "prepare": "husky install",
    "optimize:images": "bash ./scripts/optimize-images.sh",
    "webp:update": "bash ./scripts/update-webp-references.sh",
    "sitemap:generate": "bash ./scripts/generate-sitemap.sh",
    "audit:lighthouse": "bash ./scripts/lighthouse-audit.sh",
    "validate:advanced": "bash ./scripts/validate-advanced.sh",
    "validate:dev": "bash ./scripts/validate-development.sh",
    "test:manual": "bash ./scripts/start-manual-testing.sh",
    "prepare:commit": "bash ./scripts/prepare-commit.sh"
  },
  "keywords": [
    "floreria",
    "flores",
    "arreglos",
    "victoria"
  ],
  "author": "Flores Victoria",
  "license": "MIT",
  "dependencies": {
    "mongodb": "^6.20.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "k6": "^0.0.0",
    "supertest": "^6.3.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.6.2",
    "mongoose": "^7.5.0",
    "mongodb-memory-server": "^9.1.3",
    "amqplib": "^0.10.3",
    "redis": "^4.6.11",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
