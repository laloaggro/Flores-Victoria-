{
  "name": "flores-victoria",
  "version": "2.0.0",
  "description": "Enterprise E-commerce Platform para Florer√≠a - Production Ready con 21 features enterprise",
  "main": "index.js",
  "scripts": {
    "start": "bash start-all.sh",
    "stop": "bash stop-all.sh",
    "start:frontend": "cd frontend && python3 -m http.server 5173",
    "start:backend": "cd backend && npm start",
    "start:admin": "cd admin-panel && npm start",
    "install:all": "cd backend && npm install && cd ../admin-panel && npm install",
    "dev:stack": "docker compose -f docker-compose.dev.yml up --build",
    "dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "dev:down": "docker compose -f docker-compose.dev.yml down",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "dev:logs:gateway": "docker compose -f docker-compose.dev.yml logs -f api-gateway",
    "dev:logs:auth": "docker compose -f docker-compose.dev.yml logs -f auth-service",
    "dev:logs:products": "docker compose -f docker-compose.dev.yml logs -f product-service",
    "dev:logs:frontend": "docker compose -f docker-compose.dev.yml logs -f frontend",
    "dev:restart:gateway": "docker compose -f docker-compose.dev.yml restart api-gateway",
    "dev:restart:auth": "docker compose -f docker-compose.dev.yml restart auth-service",
    "dev:restart:products": "docker compose -f docker-compose.dev.yml restart product-service",
    "dev:restart:frontend": "docker compose -f docker-compose.dev.yml restart frontend",
    "dev:ps": "docker compose -f docker-compose.dev.yml ps",
    "dev:clean": "docker compose -f docker-compose.dev.yml down -v --remove-orphans",
    "prod:stack": "docker compose -f docker-compose.prod.yml up --build",
    "prod:up": "docker compose -f docker-compose.prod.yml up",
    "prod:down": "docker compose -f docker-compose.prod.yml down",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:visual": "percy exec -- playwright test tests/visual",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "validate:all": "bash ./scripts/validate-all.sh",
    "prepare": "husky install",
    "optimize:images": "bash ./scripts/optimize-images.sh",
    "webp:update": "bash ./scripts/update-webp-references.sh",
    "sitemap:generate": "bash ./scripts/generate-sitemap.sh",
    "audit:lighthouse": "bash ./scripts/lighthouse-audit.sh",
    "validate:advanced": "bash ./scripts/validate-advanced.sh",
    "validate:dev": "bash ./scripts/validate-development.sh",
    "test:manual": "bash ./scripts/start-manual-testing.sh",
    "prepare:commit": "bash ./scripts/prepare-commit.sh",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "db:up": "docker compose -f docker-compose.db.yml up -d",
    "db:down": "docker compose -f docker-compose.db.yml down",
    "db:logs": "docker compose -f docker-compose.db.yml logs -f",
    "db:seed": "bash ./scripts/load-mock-data.sh",
    "monitoring:up": "docker compose -f monitoring/docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker compose -f monitoring/docker-compose.monitoring.yml down",
    "monitoring:logs": "docker compose -f monitoring/docker-compose.monitoring.yml logs -f",
    "monitoring:ps": "docker compose -f monitoring/docker-compose.monitoring.yml ps",
    "admin:start": "bash ./scripts/unified-services.sh start admin",
    "admin:stop": "bash ./scripts/unified-services.sh stop admin",
    "admin:restart": "bash ./scripts/unified-services.sh restart admin",
    "admin:logs": "bash ./scripts/unified-services.sh logs admin",
    "admin:status": "bash ./scripts/unified-services.sh status",
    "chrome:debug": "bash ./scripts/chrome-debug.sh",
    "chrome:debug:admin": "bash ./scripts/chrome-debug.sh admin",
    "chrome:debug:frontend": "bash ./scripts/chrome-debug.sh frontend",
    "docs:organize": "bash ./scripts/organize-docs.sh",
    "docs:serve": "cd docs && python3 -m http.server 8080",
    "menu": "bash ./scripts/main-menu.sh",
    "diagnostics": "bash ./scripts/unified-diagnostics.sh --full",
    "check:services": "bash ./scripts/unified-diagnostics.sh --quick",
    "check:critical": "bash ./scripts/unified-diagnostics.sh --critical",
    "fix:auto": "bash ./scripts/auto-fix-issues.sh",
    "backup:db": "bash ./scripts/backup-databases.sh",
    "clean:logs": "bash ./scripts/cleanup-logs.sh",
    "clean:backups": "bash ./scripts/cleanup-backups.sh",
    "dashboard": "bash ./scripts/dashboard.sh",
    "logs:list": "bash ./scripts/log-manager.sh list",
    "logs:tail": "bash ./scripts/log-manager.sh tail",
    "logs:search": "bash ./scripts/log-manager.sh search",
    "logs:errors": "bash ./scripts/log-manager.sh errors",
    "logs:clean": "bash ./scripts/log-manager.sh clean",
    "logs:stats": "bash ./scripts/log-manager.sh stats",
    "ratelimit:clear": "bash ./scripts/clear-rate-limits.sh"
  },
  "keywords": [
    "floreria",
    "flores",
    "e-commerce",
    "microservices",
    "enterprise",
    "pwa",
    "storybook",
    "percy",
    "swagger",
    "docker",
    "chile",
    "santiago"
  ],
  "author": "Eduardo Garay <laloaggro@github>",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/laloaggro/Flores-Victoria-.git"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "mongodb": "^6.20.0"
  },
  "devDependencies": {
    "@percy/cli": "^1.31.4",
    "@percy/playwright": "^1.0.9",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/html-vite": "^9.1.13",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-storybook": "^9.1.13",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.2",
    "k6": "^0.0.0",
    "lint-staged": "^15.1.0",
    "mongodb-memory-server": "^9.1.3",
    "mongoose": "^7.5.0",
    "prettier": "^3.1.0",
    "redis": "^4.6.11",
    "storybook": "^9.1.13",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
