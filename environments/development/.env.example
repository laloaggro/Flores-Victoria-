# Environment Configuration - Flores Victoria
# Copiar a .env y ajustar valores según entorno

# ============================================
# ENTORNO
# ============================================
NODE_ENV=development  # development | production | staging
DEBUG=true           # true | false - Habilita logs detallados

# ============================================
# LOGGING
# ============================================
# Nivel de log: debug | info | warn | error
LOG_LEVEL=debug

# Habilitar grupos de logs específicos
DEBUG_AUTH=true
DEBUG_API=true
DEBUG_CART=true
DEBUG_PRODUCTS=true
DEBUG_IMAGES=true

# ============================================
# SERVICIOS EXTERNOS
# ============================================
# API Gateway
API_URL=http://localhost:3000

# Bases de datos (no incluir credenciales reales aquí)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=flores_db
POSTGRES_USER=flores_user
POSTGRES_PASSWORD=your-password-here

MONGODB_URI=mongodb://localhost:27018/flores_db
REDIS_URL=redis://localhost:6380

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# ============================================
# FRONTEND
# ============================================
# Puerto del servidor de desarrollo
VITE_PORT=5173
VITE_HOST=localhost

# URLs para el frontend
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# ============================================
# CARACTERÍSTICAS
# ============================================
# Habilitar/deshabilitar características
ENABLE_PWA=true
ENABLE_ANALYTICS=false  # Google Analytics
ENABLE_SENTRY=false     # Error tracking
ENABLE_HOTJAR=false     # Heatmaps

# ============================================
# OPTIMIZACIÓN
# ============================================
# Compresión de imágenes
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080

# Cache
CACHE_TTL=3600  # segundos
ENABLE_CACHE=true

# ============================================
# SEGURIDAD
# ============================================
# JWT
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# ============================================
# DESARROLLO
# ============================================
# Recargar automáticamente
HOT_RELOAD=true
AUTO_OPEN_BROWSER=false

# Source maps en producción (no recomendado)
GENERATE_SOURCEMAP=false

# ============================================
# MONITOREO
# ============================================
# Prometheus metrics
ENABLE_METRICS=false
METRICS_PORT=9090

# Health checks
HEALTH_CHECK_INTERVAL=30000  # ms

# ============================================
# NOTIFICACIONES
# ============================================
# Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# WhatsApp Business API (opcional)
WHATSAPP_PHONE=+1234567890
WHATSAPP_API_KEY=your-api-key-here

# ============================================
# INTEGRACIONES
# ============================================
# Google OAuth (opcional)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Facebook OAuth (opcional)
FACEBOOK_APP_ID=your-app-id
FACEBOOK_APP_SECRET=your-app-secret

# ============================================
# PAGOS (DESARROLLO - NO USAR EN PRODUCCIÓN)
# ============================================
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

PAYPAL_CLIENT_ID=sb-...
PAYPAL_CLIENT_SECRET=sb-...

# ============================================
# IMÁGENES AI (OPCIONAL)
# ============================================
# Hugging Face
HF_TOKEN=hf_...

# Replicate
REPLICATE_API_TOKEN=r8_...

# Leonardo AI
LEONARDO_API_KEY=...

# ============================================
# NOTAS
# ============================================
# 1. NUNCA commitear este archivo con valores reales
# 2. Usar variables de entorno del sistema en producción
# 3. Los servicios externos son opcionales
# 4. Ajustar según necesidades del proyecto
