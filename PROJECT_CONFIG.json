{
  "projectName": "Flores Victoria",
  "version": "1.0.0",
  "description": "Florería familiar con más de 20 años de experiencia",
  "author": "Arreglos Victoria",
  "architecture": "microservices",
  "structure": {
    "frontend": {
      "port": 5173,
      "path": "./frontend",
      "description": "Sitio web principal con catálogo de productos y sistema de compras"
    },
    "apiGateway": {
      "port": 3000,
      "path": "./microservices/api-gateway",
      "description": "Punto de entrada único para todas las solicitudes a los microservicios"
    },
    "microservices": {
      "path": "./microservices",
      "description": "Directorio que contiene todos los microservicios"
    },
    "adminPanel": {
      "port": 3001,
      "path": "./admin-panel",
      "description": "Panel de administración para gestión de productos, pedidos y usuarios"
    }
  },
  "technologies": {
    "frontend": ["HTML5", "CSS3", "JavaScript", "Web Components"],
    "backend": ["Node.js", "Express.js", "PostgreSQL", "MongoDB", "Redis", "RabbitMQ"],
    "devTools": ["Git", "Docker", "Vite"]
  },
  "services": {
    "frontend": "http://localhost:5173",
    "apiGateway": "http://localhost:3000",
    "adminPanel": "http://localhost:3001"
  },
  "microservices": {
    "auth": {
      "name": "Auth Service",
      "port": 3001,
      "description": "Servicio de autenticación y autorización"
    },
    "product": {
      "name": "Product Service",
      "port": 3002,
      "description": "Servicio de gestión de productos"
    },
    "user": {
      "name": "User Service",
      "port": 3003,
      "description": "Servicio de gestión de usuarios"
    },
    "order": {
      "name": "Order Service",
      "port": 3004,
      "description": "Servicio de gestión de pedidos"
    },
    "cart": {
      "name": "Cart Service",
      "port": 3005,
      "description": "Servicio de carrito de compras"
    },
    "wishlist": {
      "name": "Wishlist Service",
      "port": 3006,
      "description": "Servicio de lista de deseos"
    },
    "review": {
      "name": "Review Service",
      "port": 3007,
      "description": "Servicio de reseñas"
    },
    "contact": {
      "name": "Contact Service",
      "port": 3008,
      "description": "Servicio de contacto"
    }
  }
}